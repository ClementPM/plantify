<h2><%= @plant.name %></h2>
<p><%= @plant.description %></p>
<p><%= @plant.address %></p>
<p><%= @plant.category %></p>
<p><%= @plant.price %></p>
<% @plant.photos.each do |photo| %>
  <%= cl_image_tag photo.key, height: 500, width: 400, crop: :fill unless photo.blank? %>
<% end %>

<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>

<%= link_to "all plants", plants_path %>
