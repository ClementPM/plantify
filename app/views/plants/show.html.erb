<div class="show-banner d-flex align-items-center" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://images.unsplash.com/photo-1466781783364-36c955e42a7f?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1951&q=80');">
  <div class="container">
    <div class="banner-text d-flex">
      <h1> <%= @plant.name %> </h1>
    </div>
  </div>
</div>


<div class="container">

  <div id="carouselExampleIndicators" class="plant-card-image-show-main mb-5 carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>

    <div class="carousel-inner">
      <div class="carousel-item active">
        <div class=" d-block plant-card-image-show" style="background-image: url('<%= cl_image_path @plant.photos.first.key, crop: :fill %>')">
        </div>
      </div>
      <div class="carousel-item">
        <div class=" d-block plant-card-image-show" style="background-image: url('<%= cl_image_path @plant.photos.first.key, crop: :fill %>')">
        </div>
      </div>
      <div class="carousel-item">
        <div class=" d-block plant-card-image-show" style="background-image: url('<%= cl_image_path @plant.photos.first.key, crop: :fill %>')">
        </div>
      </div>

      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
</div>

<div class="container">

  <div class="card-border mb-5">

    <div class="container p-0 d-flex">

      <div>
        <h5 class="mb-4 mr-5">Hi, my name is <%= @plant.name %>!</h5>
        <p class="mb-5 mr-5"><%= @plant.description %></p>

        <div class="d-flex align-items-center mb-4">
          <div class="mr-4">
            <%= image_tag("https://www.flaticon.com/svg/static/icons/svg/1460/1460537.svg", size: "30") %>
          </div>
          <div class="mb-0 ml-2">
            <p class="mb-0"><%= @plant.category %></p>
          </div>
        </div>

        <div class="d-flex align-items-center mb-4">
          <div class="mr-4">
            <%= image_tag("https://www.flaticon.com/svg/static/icons/svg/846/846066.svg", size: "30") %>
          </div>
          <div class="ml-2">
            <p class="mb-0"><%= @plant.price %> EUR / month</p>
          </div>
        </div>

        <div class="d-flex align-items-center">
          <div class="mr-4">
            <%= image_tag("https://www.flaticon.com/svg/static/icons/svg/3198/3198809.svg", size: "30") %>
          </div>
          <div class="ml-2">
            <p class="mb-0"><%= @plant.address %></p>
          </div>
        </div>

      </div>

      <div class="booking-card" id="surrounding">
        <h5 class="mb-0 my-2">Add dates for prices</h5>
          <%= render 'plants/form_booking' %>
      </div>
    </div>

  </div>
</div>

<div id="map"
  style="width: 100%; height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

<%= render 'shared/footer' %>
